<!-- Button trigger modal -->
<div class = "action-btn">
  <p data-toggle="modal" data-target="#formModalMessage1" type="button">
    Create a post
  </p>
</div>
<!-- Modal -->
<div class="modal fade" id="formModalMessage1" tabindex="-1" aria-labelledby="formModalLabel" aria-hidden="true">
  <div class="modal-dialog modal-xl">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="formModalLabel1">New Message</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        <%= render 'events/form' %>
      </div>
    </div>
  </div>
</div>