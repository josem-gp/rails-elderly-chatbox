<div class="flex-message">
  <div class="grid-message">
    <div class="message-form recommendation-form">
      <div class="message-container recommendation-container">
        <div class = "shop-show">
          <div class="shop-img"></div>
          <div class="shop-info"></div>
        </div>
        <%= simple_form_for([@user, @message], remote: true) do |f| %>
          <%= f.input :title %>
          <%= f.input :content %>
          <%= f.association :room, collection: current_user.rooms.where(room_type: 'private').order("name asc"), prompt: "Choose a Room" %>
          <%= f.input :shop_id, as: :hidden %>
          <%= f.submit "Recommend it!", class: "btn-recommend" %>
        <% end %>
      </div>
    </div>
    <div id="map"
     style="width: 100%; height: 550px;"
     data-markers="<%= @markers.to_json %>"
     data-mapbox-api-key="<%= ENV['MAPBOX_API_KEY'] %>">
    </div>
  </div>
</div>