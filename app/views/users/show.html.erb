<div class="flex-container">
  <div class="main-container">
    <div class="container">
      <div class="container-header">
        <%= image_tag "user-icon.png", alt: "Signup Form", class: "avatar-borderlg" %>
        <h1><%= @user.first_name %></h1>
      </div>
      <div class="container-infoshow">
        <h3>Rooms: </h3>
        <div class = "rooms-infoshow">
          <% @user.rooms.each do |room| %>
            <%= link_to "#{room.name}", user_room_path(@user, room), class: "room-tag" %>
          <% end %>
        </div>
        <h3>Messages written:</h3>
        <div class="messages-infoshow">
          <% @user.messages.each do |message| %>
            <p><%= message.content %></p>
          <% end %>
        </div>
      </div>
      <%= link_to 'Go back', root_path, class: "btn-back" %>
      <%= link_to 'Choose a room', new_user_participant_path(@user), class: "btn-sign" %>
    </div>
  </div>
  <div class="message-form">
    <h2>Send a message</h2>
    <div class="message-container">
      <%= simple_form_for [@user, @message] do |f| %>
        <%= f.input :content %>
        <%= f.association :room, collection: Room.all, prompt: "Choose a Room" %>
        <%= f.submit "Create a message", class: "btn-log" %>
      <% end %>
    </div>
  </div>
</div>
