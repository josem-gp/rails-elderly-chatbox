<div class="main-container">
  <div class="container">
    <h1 class = 'centered-title'>Our Neighbours</h1>
    <div class="container-grid">
      <% @users.each do |user| %>
        <div class="card-product">
        <%= link_to user_path(user) do %>
          <%= image_tag "avatar.jpg", alt: "Signup Form", class: "avatar-borderlg" %>
        <% end %>
          <div class="card-product-infos">
            <h2><%= "#{user.first_name} (#{user.alias})"%></h2>
            <p><%= "Total messages: #{user.messages.count}"%></p>
          </div>
        </div>
      <% end %>
    </div>
    <%= link_to 'Go back', root_path, class: "btn-back" %>
  </div>
</div>

