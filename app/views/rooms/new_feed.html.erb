<div class="chat-container">
  <div class = "sidebar-secondary">
    <div class= "sidebar-secondary-container">
      <div class = "box-header">
        <h2>Rooms</h2>
        <div class="box-header-id">
          <i class="fas fa-circle"></i>
          <p><%= @user.alias %></p>
        </div>
      </div>
      <div class = "profile-box">
        <div class= "profile-title">
          <h3>Rooms</h3>
          <i class="fas fa-plus"></i>
        </div>
        <div class = "profile-content channels">
          <ul>
            <% @user.rooms.each do |room| %>
              <li><i class="fab fa-slack-hash"></i><%= room.name %></li>
            <% end %>
          </ul>
        </div>
        <div class= "profile-title">
          <h3>Direct Messages</h3>
          <i class="fas fa-plus"></i>
        </div>
        <div class = "profile-content users">
          <ul>
            <% @room.users.each do |user| %>
              <% if user.id != @user.id %>
                <li><i class="fas fa-circle"></i><%= user.alias %></li>
              <% end %>
            <% end %>
          </ul>
        </div>
      </div>
    </div>
    <%= link_to 'Go back', user_path(@user), class: "btn-back" %>
  </div>
  <div class= "c-container">
    <div class="chat-secondary-container">
      <div class="chat-title">
        <i class="fab fa-slack-hash"></i>
        <h2><%= @room.name %></h2>
      </div>
      <div class="chat-display">
        <div class="inner-chat-display">
          <% @room.messages.each do |message| %>
            <div class="user-message">
              <%= cl_image_tag message.user.icon.url, alt: "User icon", class: "avatar" %>
              <div class = "message-text">
                <%= cl_image_tag message.shop.photos.first.key, height: 200, width: 200, crop: :fill %>
                <h3><%= message.user.alias %></h3>
                <p><%= message.content %></p>
                <%= link_to "Remove",
                  user_message_path(@user,message),
                  method: :delete,
                  data: { confirm: "Are you sure?" }
                   %>
              </div>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>