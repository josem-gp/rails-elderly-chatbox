<% @room.events.each do |event| %>
  <div class="user-message">
    <%= cl_image_tag event.user.icon.url, alt: "User icon", class: "avatar" %>
    <div class = "message-text">
      <h3><%= event.user.alias %></h3>
      <p><%= event.content %></p>
      <%= link_to "Remove",
                  user_event_path(@user,event),
                  method: :delete,
                  data: { confirm: "Are you sure?" }
                   %>
    </div>
  </div>
<% end %>